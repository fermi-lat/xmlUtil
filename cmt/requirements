apply_pattern package_linkopts
apply_pattern package_headers
apply_pattern package_xmlfiles

library xmlUtil ${xmlUtil_headers}  \
     Arith.cxx            \
     Substitute.cxx       \
     Constants.cxx        \
     Source.cxx           \
     id/DictConstraints.cxx  \
     id/DictField.cxx        \
     id/DictFieldMan.cxx     \

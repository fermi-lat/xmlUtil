package xmlUtil

## use glast_settings
## use XMLEXT
##  do we want to specify a version of xml?  Would be v3 if we do.
use xml 

include_dirs "${XMLUTILROOT}"

apply_pattern package_linkopts
apply_pattern package_headers
apply_pattern package_xmlfiles

# private 
# macro xmlUtil_xmlfiles "" WIN32 "../xml/*.xml" 

library xmlUtil ${xmlUtil_headers} -no_share \
     Arith.cxx            \
     Substitute.cxx       \
     Constants.cxx        \
     Source.cxx           \
     id/DictConstraints.cxx  \
     id/DictField.cxx        \
     id/DictFieldMan.cxx     \
     id/DictNode.cxx         \
     id/DictValidVisitor.cxx \
     id/IdConversion.cxx     \
     id/IdConverter.cxx      \
     id/IdDict.cxx           \
     id/IdDictMan.cxx        \
     id/IdOpCompress.cxx     \
     id/IdOpTruncate.cxx     \
     id/IdOperation.cxx       \
     id/NamedId.cxx          \
     ${xmlUtil_xmlfiles} 

private
application eval eval.cxx Arith.cxx Substitute.cxx  Constants.cxx Source.cxx

application forProg makeXmlForProg.cxx Arith.cxx Substitute.cxx \
     Constants.cxx Source.cxx

application forDoc makeXmlForDoc.cxx Arith.cxx  Constants.cxx Source.cxx

application testId id/*.cxx



     id/DictValidVisitor.cxx \
     id/IdConversion.cxx     \
     id/IdConverter.cxx      \
     id/IdDict.cxx           \
     id/IdDictMan.cxx        \
     id/Identifier.cxx       \
     id/IdOpCompress.cxx     \
     id/IdOpTruncate.cxx     \
     id/IdOperation.cxx       \
     id/NamedId.cxx          \
     id/IdKey.cxx            \
     docMan/GDDDocMan.cxx    \
     ${xmlUtil_xmlfiles} 

private
apply_pattern package_shlibflags


application eval eval.cxx 

application forProg makeXmlForProg.cxx 

